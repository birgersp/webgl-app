precision mediump float;

uniform bool useColor;
uniform sampler2D sampler;

varying vec2 vTextureCoord;
varying float normalPhi;
void main() {

    if (useColor == true) {
        gl_FragColor = texture2D(sampler, vTextureCoord);
    } else {
        gl_FragColor = vec4(0, 0, 0, 1);
    }
}
