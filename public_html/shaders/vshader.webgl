uniform mat4 mvMatrix;
uniform bool useColor;

attribute vec3 position;
attribute vec3 color;

varying vec4 vColor;
void main() {
    gl_Position = mvMatrix * vec4(position, 1);

    if (useColor == true) {
        vColor = vec4(color, 1);
    } else {
        vColor = vec4(0, 0, 0, 1);
    }
}
